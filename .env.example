# GitHub personal access token (needs repo scope for private repos)
GITHUB_TOKEN=ghp_xxxxx

# OpenAI API key (for text-embedding-3-small)
OPENAI_API_KEY=sk-xxxxx

# Anthropic API key (for claude-haiku-4-5-20251001)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Target repository in owner/repo format
CLAWTRIAGE_REPO=openclaw/openclaw

# Cosine similarity threshold (0-1). PRs above this are flagged as similar.
SIMILARITY_THRESHOLD=0.82

# Path to the embedding cache file
CACHE_PATH=.clawtriage-cache.json

# Set to "true" to post triage comment to GitHub PR
POST_COMMENT=false
